{
	"easycom": {
	        "autoscan": true,
	        "custom": {
	            // uni-ui 规则如下配置
	            "^uni-(.*)": "@dcloudio/uni-ui/lib/uni-$1/uni-$1.vue"
	        }
	    },
	"pages": [ //pages数组中第一项表示应用启动页，参考：https://uniapp.dcloud.io/collocation/pages
		{
			"path": "pages/index/index",
			"style": {
				"navigationBarTitleText": "韭菜助手",
				"enablePullDownRefresh": true
			}
		}
	    ,{
            "path" : "pages/index/set/set",
            "style" :                                                                                    
            {
                "navigationBarTitleText": "设置",
                "enablePullDownRefresh": false
            }
            
        },{
            "path" : "pages/index/set/test",
            "style" :                                                                                    
            {
                "navigationBarTitleText": "设置",
                "enablePullDownRefresh": false
            }
            
        },{
            "path" : "pages/index/set/addFund",
            "style" :                                                                                    
            {
                "navigationBarTitleText": "编辑",
                "enablePullDownRefresh": false
            }
            
        },{
            "path" : "pages/index/set/batchAddFund",
            "style" :                                                                                    
            {
                "navigationBarTitleText": "批量导入",
                "enablePullDownRefresh": false
            }
            
        },{
            "path" : "pages/index/set/fundSort",
            "style" :                                                                                    
            {
                "navigationBarTitleText": "调整顺序",
                "enablePullDownRefresh": false
            }
            
        }
    ],
	"globalStyle": {
		"navigationBarTextStyle": "black",
		"navigationBarTitleText": "uni-app",
		"navigationBarBackgroundColor": "#F8F8F8",
		"backgroundColor": "#F8F8F8"
	},
	"tabBar": {
			"color":"#8a8a8a",
			"selectedColor":"#0085d0",
			"borderStyle":"black",
